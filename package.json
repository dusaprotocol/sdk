  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/dusaprotocol/sdk",
  "module": "dist/sdk.esm.js",
  "scripts": {
    "lint": "eslint --ext .ts --ext .tsx src/",
    "lint:fix": "eslint --ext .ts --ext .tsx src/ --fix",
